<?xml version="1.0" encoding="UTF-8"?>

<!-- beans:javabean
     spring是一个放java对象的容器,把放在spring中的java对象称为javabean
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 对于普通的javabean,只需要class就够了
        要求,这些javabean必须有无参的构造方法

    <bean id="somebean" class="com._520it.spring.day1.create.SomeBean"/>
    -->

    <!-- 配置静态工厂方法生产的bean
        1,bean的类型必须要写工厂的类
        2,必须要配置factory-method:代表调用工厂上面的那个方法来创建bean

    <bean id="somebean" class="com._520it.spring.day1.create.SomeBeanFactory" factory-method="create"/>
    -->


    <!-- 实例工厂方法,通过一个工厂对象的实例来生产我们需要的对象;
        1,先配置一个工厂的实例对象;
        2,在配置bean,factory-bean:哪一个 实例作为工厂;factory-method:在这个实例上面调用哪个工厂方法;
        3,注意.在spring中声明的对象之间是可以相互通过id互相引用了;

    <bean id="factoryBean" class="com._520it.spring.day1.create.SomeBeanFactory"/>
    <bean id="someBean" class="com._520it.spring.day1.create.SomeBean"
          factory-bean="factoryBean" factory-method="create"/>
    -->

</beans>