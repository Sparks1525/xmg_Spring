<?xml version="1.0" encoding="UTF-8"?>

<!-- beans:javabean
     spring是一个放java对象的容器,把放在spring中的java对象称为javabean
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd">

        <!--
                init-method:告诉spring,somebean对象的初始化方法名称;初始化方法是不能有参数的;
                destory-method:告诉spring,somebean对象的销毁方法名称;销毁方法不能有参数;
        -->
        <bean id="somebean" class="com._520it.spring.day1.initmethod.SomeBean"
              init-method="init" destroy-method="close"/>


</beans>